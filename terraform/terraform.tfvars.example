# AWS region to deploy resources
aws_region = "us-west-2"

# Environment name (dev, staging, prod)
environment = "dev"

# Project name used for resource naming
project_name = "devopsplus"

# CIDR block for the VPC
vpc_cidr = "10.0.0.0/16"

# CIDR block for the public subnet
public_subnet_cidr = "10.0.1.0/24"

# Name of the EKS cluster
cluster_name = "devopsplus-cluster"

# Kubernetes version for the EKS cluster
kubernetes_version = "1.28"

# EC2 instance types for the EKS node group
node_instance_types = ["t3.medium"]

# Desired number of nodes in the EKS node group
node_desired_size = 2

# Minimum number of nodes in the EKS node group
node_min_size = 1

# Maximum number of nodes in the EKS node group
node_max_size = 3